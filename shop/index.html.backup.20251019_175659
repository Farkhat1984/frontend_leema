    <script>
        function logout() {
            localStorage.removeItem('token');
            localStorage.removeItem('userRole');
            window.location.href = '../index.html';
        }

        // Set mock data if scripts don't load
        setTimeout(() => {
            if (document.getElementById('totalProducts').textContent === '0') {
                document.getElementById('totalProducts').textContent = '45';
                document.getElementById('activeProducts').textContent = '38';
                document.getElementById('totalViews').textContent = '1,234';
                document.getElementById('totalTryOns').textContent = '567';
            }
        }, 1000);
    </script>
